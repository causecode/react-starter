{
  "name": "project-name",
  "version": "1.0.0",
  "description": "",
  "main": "public/index.js",
  "typings": "public/index.d.ts",
  "scripts": {
    "tar": "npm run build:prod && tar -czvf www.tar.gz www/",
    "start": "npm run clean && webpack-dev-server --production",
    "build": "npm run clean && webpack",
    "build:dev": "npm run build",
    "build:prod": "npm run build -- --production",
    "clean": "rimraf public www",
    "compile": "npm run clean && tsc",
    "postInstall": "npm run compile",
    "test": "NODE_ENV=test jest --no-cache",
    "lint-ts": "tslint 'src/*.tsx' 'src/**/*.tsx' 'src/*.ts' 'src/**/*.ts'",
    "start:dev": "npm run clean && webpack-dev-server --watch --hot"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org:causecode/PROJECT_REPOSITORY.git"
  },
  "reactHero": {
    "serverUrl": "http://PRODUCTION_SERVER_URL/",
    "APIUrl": "http://PRODUCTION_SERVER_URL/YOUR/API/URL"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "homepage": "https://bitbucket.org/causecode/PROJECT_REPOSITORY#readme",
  "dependencies": {
    "axios": "^0.12.0",
    "es6-promise": "3.2.1",
    "react": "15.1.0",
    "react-dom": "15.2.0",
    "react-router": "2.4.1",
    "react-router-redux": "4.0.5",
    "react-hot-loader": "1.3.0",
    "extract-text-webpack-plugin": "1.0.1",
    "html-webpack-plugin": "2.19.0",
    "redux": "3.6.0",
    "ts-loader": "1.2.2",
    "tslint": "^3.11.0",
    "tslint-loader": "^2.1.4",
    "typescript": "2.1.1",
    "webpack": "1.13.1",
    "webpack-dev-server": "1.14.1"
  },
  "devDependencies": {
    "babel-jest": "17.0.2",
    "babel-polyfill": "6.16.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-3": "6.17.0",
    "enzyme": "2.6.0",
    "jest": "17.0.3",
    "jest-cli": "17.0.3",
    "react-addons-test-utils": "15.2.0",
    "react-test-renderer": "15.4.1",
    "unroll": "1.2.0"
  }
}

